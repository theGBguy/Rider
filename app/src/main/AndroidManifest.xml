<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rider">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="true" />

    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ui.SubmitSuccessActivity"
            android:exported="true" />

        <activity
            android:name=".ui.AcceptedRequestActivity"
            android:exported="true" />

        <activity
            android:name=".ui.UserOptionsActivity"
            android:exported="true"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.VolunteerLoginActivity"
            android:exported="true" />

        <activity
            android:name=".ui.StudentLoginActivity"
            android:exported="true" />

        <activity
            android:name=".ui.DetailsActivity"
            android:exported="true" />

        <activity
            android:name=".ui.AboutOptionMenuActivity"
            android:exported="true" />

        <activity
            android:name=".ui.StudentSideNavBarActivity"
            android:exported="true"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".ui.VolunteerSideNavBar"
            android:exported="true"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".ui.RegisterActivity"
            android:exported="true" />

        <activity
            android:name=".ui.MainActivity"
            android:exported="true" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.rider.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>