<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="18dp"
    tools:context=".ui.nav_fragments.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:src="@drawable/icon_profile"
            app:contentPadding="8dp"
            app:shapeAppearanceOverlay="@style/CircularComponentStyle"
            app:strokeColor="?colorPrimary"
            app:strokeWidth="4dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_id_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Your identification docs\nðŸ‘‡"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/legal_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:src="@drawable/yatra"
            app:contentPadding="8dp"
            tools:src="@drawable/icon_profile" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_changeImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Change your profile details"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium" />

        <EditText
            android:id="@+id/profile_firstname_id"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_selector"
            android:drawableStart="@drawable/icon_user"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="First Name"
            android:inputType="textEmailAddress"
            android:padding="8dp" />

        <EditText
            android:id="@+id/profile_lastname_id"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_selector"
            android:drawableStart="@drawable/icon_user"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Last Name"
            android:inputType="textEmailAddress"
            android:padding="8dp" />

        <EditText
            android:id="@+id/profile_email_id"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_selector"
            android:drawableStart="@drawable/icon_email"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:padding="8dp" />


        <EditText
            android:id="@+id/profile_phone_id"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_selector"
            android:drawableStart="@drawable/icon_phone"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Phone"
            android:inputType="phone"
            android:padding="8dp" />

        <EditText
            android:id="@+id/profile_address_id"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/edittext_selector"
            android:drawableStart="@drawable/icon_location"
            android:drawablePadding="10dp"
            android:ems="10"
            android:hint="Address"
            android:inputType="text"
            android:padding="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancelBtn_id"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:text="Cancel" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/updateBtn_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:padding="16dp"
                android:text="Update" />

        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar_id"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible" />
    </LinearLayout>

</ScrollView>