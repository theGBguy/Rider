<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mapbox.maps.MapView
        android:id="@+id/map_select_location"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:mapbox_cameraPaddingBottom="8"
        app:mapbox_cameraPaddingTop="8"
        app:mapbox_cameraTargetLat="27.700769"
        app:mapbox_cameraTargetLng="85.300140"
        app:mapbox_cameraZoom="12.0" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_move_cam_to_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha=".7"
        android:text="Move camera to student"
        app:layout_constraintBottom_toTopOf="@id/btn_move_cam_to_volunteer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_move_cam_to_volunteer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha=".7"
        android:text="Move camera to volunteer"
        app:layout_constraintBottom_toTopOf="@id/tripProgressView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.mapbox.navigation.ui.tripprogress.view.MapboxTripProgressView
        android:id="@+id/tripProgressView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>